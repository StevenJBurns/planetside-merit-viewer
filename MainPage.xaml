<UserControl
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:m="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  x:Class="MeritViewer.MainPage"
  d:DesignHeight="320"
  d:DesignWidth="480"
  m:Ignorable="d"
>
  <UserControl.Background>
    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
      <GradientStop Offset="0.00" Color="Black" />
      <GradientStop Offset="0.50" Color="White" />
      <GradientStop Offset="1.00" Color="Black" />
    </LinearGradientBrush>
  </UserControl.Background>
  <StackPanel>
    <StackPanel.Background>
      <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
        <GradientStop Offset="0.00" Color="Gray" />
        <GradientStop Offset="0.75" Color="White" />
        <GradientStop Offset="1.00" Color="Gray" />
      </LinearGradientBrush>
    </StackPanel.Background>
    <Button Height="24" Width="192" Margin="4" Click="Button_Click">Toggle Full-Screen Mode</Button>
  </StackPanel>
</UserControl>
